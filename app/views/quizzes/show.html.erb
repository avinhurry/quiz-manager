<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @quiz.name %>
</p>

<ol>
<% for question in @quiz.questions %>
  <li>
    <%= question.name %>
    <ul>

      <%  unless current_user.user_type == "restricted_permission" %>
        <% for answer in question.answers %>
        <li><%= answer.name %></li>
        <% end %>
      <% end %>
    </ul>
  </li>
<% end %>
</ol>

<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>